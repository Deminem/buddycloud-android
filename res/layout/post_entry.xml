<com.buddycloud.layout.CardLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e3e3e3"
    android:orientation="vertical" >

    <com.buddycloud.image.SmartImageView
        android:id="@+id/bcProfilePic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY" />
    
    <LinearLayout
        android:id="@+id/contentWrapper"
        android:layout_width="260dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_toLeftOf="@+id/unreadWrapper"
        android:layout_toRightOf="@+id/bcProfilePic"
        android:orientation="vertical"
        android:padding="@dimen/standard_padding" >

        <TextView
            android:id="@+id/bcPostContent"
            style="@style/cardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</com.buddycloud.layout.CardLayout>